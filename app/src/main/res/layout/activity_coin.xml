<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.CoinActivity"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <com.github.mikephil.charting.charts.CandleStickChart
        android:id="@+id/chatViewCandle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/infoView"
        android:layout_margin="7dp"
        android:backgroundTint="@color/black"
        android:background="@drawable/box_background" />

    <LinearLayout
        android:id="@+id/infoView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/totalSuppyTv"
        android:layout_marginBottom="0dp"
        android:orientation="horizontal">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="10dp"
            android:elevation="5dp"
            android:src="@mipmap/ic_launcher"
            app:shapeAppearance="@style/CircleImageView" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginVertical="20dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center|start"
                android:text="Droid"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center|start"
                android:text="btc"
                android:textColor="@color/black"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginVertical="20dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center|start"
                android:paddingStart="40dp"
                android:text="Prize"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:gravity="center|start"
                android:text="Rank"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:drawableLeftCompat="@drawable/crown" />

        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/totalSuppyTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/circulatingSupplyTv"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="5dp"
        android:layout_marginBottom="552dp"
        android:padding="3dp"
        android:text="Total Supply : 546846460"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/circulatingSupplyTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/siteButton"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="5dp"
        android:padding="3dp"
        android:text="Circulating Supply : 546846460"
        android:textSize="15sp" />

    <Button
        android:id="@+id/siteButton"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignStart="@+id/circulatingSupplyTv"

        android:layout_alignParentBottom="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/box_background"
        android:backgroundTint="#00A3FF"
        android:text="Site"
        android:textColor="@color/white" />

</RelativeLayout>
